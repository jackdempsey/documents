.document
  = link_to @document, @document.file.url, target: :blank

.description
  %strong
    Description
  = @document.description

.owner
  %strong
    Owner
  = @document.owner

%strong
  Tags
- if @document.tags.present?
  %ul.tags
    - @document.tag_list.each do |tag|
      %li
        = link_to tag, documents_path(tag: tag)
- else
  None.

.actions
  = link_to 'Edit', edit_document_path(@document)
  |
  = link_to 'Destroy', document_path(@document), method: :delete, data: {confirm: "Sure you want to delete this document?"}

